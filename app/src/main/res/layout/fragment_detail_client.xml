<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mathe.lendermoney.fragments.DetailClient.DetailClientFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.example.mathe.lendermoney.Util.SlidingTabLayout
            android:id="@+id/stl_tabs"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorPrimaryDark">

        </com.example.mathe.lendermoney.Util.SlidingTabLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_fragment_detail"
            android:layout_width="wrap_content"
            android:layout_height="450dp"
            android:layout_weight="1"
            android:layout_below="@+id/stl_tabs"
            android:layout_alignParentStart="true">

        </android.support.v4.view.ViewPager>

    </RelativeLayout>


</FrameLayout>
